<section class="orders-show">


  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    
    <h5>Your total comes to <%= number_to_currency(@order.total_cents / 100, precision: 2) %>
    <p>Order email: <%= @order.email%> </p>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Image</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Quantity</th>
        <th scope="col">Line Item Total</th>
      </tr>
    </thead>
    <tbody>
      <% @order.line_items.each do |item| %>
        <%= render 'line_item', product: item.product, quantity: item[:quantity], total: item[:total_price_cents] %> 
      <% end %>
    </tbody>
  </table>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
