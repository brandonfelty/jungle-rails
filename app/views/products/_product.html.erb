<article <%= if product.quantity == 0; "id=disabled"; end %>>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>
  <div>
    <% if product.soldout?(product.quantity)%>          
      <button class="soldout">Sold Out</button>
      <button class="btn" id="hide" type="button">
        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
        Add
      </button>
    <% else %>
      <div></div>
      <%= button_to add_item_cart_path(product_id: product.id), class: 'btn' , method: :post do %>
        <%= fa_icon "shopping-cart", text: 'Add' %>
      <% end %>
    <% end %>
  </div>
</article>
